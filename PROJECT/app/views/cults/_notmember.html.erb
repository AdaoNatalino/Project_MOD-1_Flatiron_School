<% if @user %>
    <%= form_with model: Oath.new do |f| %>
    <%= f.hidden_field :cult_id, value: @cult.id %>
    <%= f.hidden_field :member_id, value: @user.id %>
    <%= f.submit "Join Cult"%>
    <% end %>
<% end %>
  <br>
  <% if @cult.locations.any? %>
  <h4><strong><em>This Cult has buildings in these cities:</em></strong></h4>
  <ul>
  <% @cult.locations.each do |location| %>
    <li> <%= link_to location.name, location %> </li>
    <%= image_tag  "#{location.picture}", width: "200px" %>
  <% end %>
  </ul>
  <% end %>
  <br>